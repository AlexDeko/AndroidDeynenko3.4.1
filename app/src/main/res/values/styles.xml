<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreenStyle" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkGreen</item>
        <item name="android:textColor">@color/colorPrimaryGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:backgroundTint">@color/colorTint</item>

    </style>

    <style name="BlueStyle" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlue</item>
        <item name="android:textColor">@color/colorPrimaryBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:backgroundTint">@color/colorAccentBlue</item>
    </style>

    <style name="BlackStyle" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlack</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:backgroundTint">@color/colorAccentBlack</item>
    </style>


</resources>
